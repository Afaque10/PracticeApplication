<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".loginsplah"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#F5F5F5"
    >





    <LinearLayout
        android:id="@+id/Paycard"
        android:layout_width="match_parent"
        android:layout_height="146dp"
        android:background="#292C31"
        android:orientation="vertical">


        <LinearLayout
            android:layout_marginTop="12dp"
            android:layout_marginLeft="12dp"
            android:layout_width="388dp"
            android:gravity="center"
            android:layout_height="44dp"
            android:orientation="horizontal"
            android:background="@drawable/searchbarbg"
            >

            <ImageView
                android:layout_marginLeft="5dp"
                android:layout_width="45dp"
                android:layout_height="match_parent"
                android:src="@drawable/searchicon"
                >

            </ImageView>
            <EditText
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:hint="Search food, restaurant and more . . ."
                android:background="@null"
                android:textSize="35px"
                >

            </EditText>

        </LinearLayout>

        <LinearLayout
            android:padding="15dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="bottom"


            >

            <Button
                android:layout_width="102dp"
                android:layout_height="34dp"
                android:background="@drawable/activedishesbutton"
                android:text="Dishes">

            </Button>

            <Button
                android:layout_marginLeft="10dp"
                android:layout_width="100dp"
                android:layout_height="34dp"
                android:background="@drawable/deactivedishesbutton"
                android:text="RESTURANT"
                android:textColor="@color/white"


                >

            </Button>


        </LinearLayout>


    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center">

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:src="@drawable/searchicon">

        </ImageView>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="We couldn’t find any results for “Biryani Pizza”"
            android:textSize="40px">

        </TextView>

    </LinearLayout>


</RelativeLayout>