<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".registerphonenumber"
    android:background="@drawable/backgroundimage">



<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="650dp"
    android:layout_alignParentBottom="true"
    android:background="@drawable/rectangle"
    android:orientation="vertical"
    android:padding="30dp"
    >
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Login/Registration"
        android:textStyle="bold"
        android:textSize="20dp"
        android:textColor="@color/black"

        >

    </TextView>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Enter your mobile number to procceed further"
        android:textSize="14dp"
        android:layout_marginTop="10dp"

        >

    </TextView>
    <EditText
        android:id="@+id/numberphone"
        android:inputType="number"
        android:maxLength="10"
        android:padding="15dp"
        android:layout_marginTop="20dp"
        android:layout_width="350dp"
        android:layout_height="56dp"
        android:background="@drawable/angle"
        android:hint="Enter phone number"
        >
    </EditText>
    <android.support.v7.widget.CardView
        android:layout_marginTop="20dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:cardCornerRadius="6dp"

        >
        <Button
            android:id="@+id/in"
            android:layout_width="350dp"
            android:layout_height="56dp"
            android:background=" #F37B17"
            android:text="GET OTP"
            android:textColor="@color/white"

            >

        </Button>



    </android.support.v7.widget.CardView>
    <ProgressBar

        android:id="@+id/loadingbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:indeterminateTint="#F37B17"
        android:layout_marginTop="15dp"
        android:visibility="gone"

        >

    </ProgressBar>
</LinearLayout>
    <LinearLayout
        android:visibility="gone"
        android:layout_marginTop="100dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/rectangle"
        android:orientation="vertical">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Otp code verification"
            android:textColor="@color/black"
            android:textSize="20dp"
            android:textStyle="bold">

        </TextView>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:text="Enter the code we sent on to your mobile number"
            android:textSize="14dp">

        </TextView>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:gravity="center"
            android:orientation="horizontal"
            android:padding="5dp"


            >

            <EditText
                android:id="@+id/otp1"
                android:layout_width="58.3dp"
                android:layout_height="56dp"
                android:background="@drawable/angle"
                android:gravity="center"
                android:inputType="number"
                android:maxLength="1"
                tools:ignore="SpeakableTextPresentCheck">

            </EditText>

            <EditText
                android:id="@+id/otp2"
                android:layout_width="58.3dp"
                android:layout_height="56dp"
                android:layout_marginLeft="4dp"
                android:background="@drawable/angle"
                android:gravity="center"
                android:inputType="number"
                android:maxLength="1"
                tools:ignore="SpeakableTextPresentCheck">

            </EditText>

            <EditText
                android:id="@+id/otp3"
                android:layout_width="58.3dp"
                android:layout_height="56dp"
                android:layout_marginLeft="4dp"
                android:background="@drawable/angle"
                android:gravity="center"
                android:inputType="number"
                android:maxLength="1"
                tools:ignore="SpeakableTextPresentCheck">

            </EditText>

            <EditText
                android:id="@+id/otp4"
                android:layout_width="58.3dp"
                android:layout_height="match_parent"
                android:layout_marginLeft="4dp"
                android:background="@drawable/angle"
                android:gravity="center"
                android:inputType="number"
                android:maxLength="1"
                tools:ignore="SpeakableTextPresentCheck">

            </EditText>

            <EditText
                android:id="@+id/otp5"
                android:layout_width="58.3dp"
                android:layout_height="56dp"
                android:layout_marginLeft="4dp"
                android:background="@drawable/angle"
                android:gravity="center"
                android:inputType="number"
                android:maxLength="1"
                tools:ignore="SpeakableTextPresentCheck">

            </EditText>

        </LinearLayout>

        <android.support.v7.widget.CardView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            app:cardCornerRadius="7dp"

            >

            <Button
                android:layout_marginLeft="30dp"
                android:id="@+id/click"
                android:layout_width="350dp"
                android:layout_height="56dp"
                android:background=" #F37B17"
                android:text="Verify Otp"
                android:textColor="#263238"

                >

            </Button>


        </android.support.v7.widget.CardView>



        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="20dp"
            android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Didnâ€™t receive the code?"
                android:textAlignment="center"

                >

            </TextView>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="5dp"
                android:text="Resend"
                android:textColor="#FF5722"
                android:textStyle="bold">

            </TextView>


        </LinearLayout>
        <ProgressBar
            android:id="@+id/progressbar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="15dp"
            android:indeterminateTint="#F37B17"
            android:visibility="gone"

            >

        </ProgressBar>

    </LinearLayout>


</RelativeLayout>